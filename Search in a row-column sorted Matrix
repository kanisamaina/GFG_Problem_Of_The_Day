Complexity:
  Time-O(n+m)
  Space-O(1)

Code(C++):

class Solution{
  public:
    bool search(vector<vector<int> > matrix, int n, int m, int x) 
    {
        // code here 
        int i=0,j=m-1;
        while(i<n && j>=0)
        {
            if(matrix[i][j]==x)
                return true;
            else if(matrix[i][j]<x)
                i++;
            else if(matrix[i][j]>x)
                j--;
        }
        return false;
    }
};
